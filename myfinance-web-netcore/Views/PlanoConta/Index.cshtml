<link rel="stylesheet" href="style.css" />

@{
    ViewData["Title"] = "Plano Costas";
}

<h3>PlanoS de Conta</h3>

<hr>
<button type="button" class="btn btn-block btn-primary" onclick="CriarPlanoConta()">Criar Plano</button>
<hr>    

<table>
  <tr>
    <th>Id</th>
    <th>Descrição</th>
    <th>Tiipo</th>
  </tr>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Tipo</th>
    </tr>

    @{
        foreach(var item in (List<PlanoContaModel>)ViewBag.Lista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
            </tr>
        }
    }
</table>

<script>
    function CriarPlanoConta()
     {
        window.location.href = "../PlanoConta/CriarPlanoConta";    
    }
</script>